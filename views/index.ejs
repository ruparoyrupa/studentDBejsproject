

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <a class="btn btn-primary"  href="/student/create">Add New</a>
            <br>
            <br>
            <div class="card">
                <div class="card-header">
                  <h2>All Students</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                   <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>phone</th>
                        <th>Location</th>
                        <th>Photo</th>
                        <th>Action</th>
                    </tr>
                   </thead>

                   <tbody>
                   <% students.forEach( (element,index) => { %>

                    <tr>
                        <td><%= index + 1 %>  </td>
                        <td><%= element.name %> </td>
                        <td><%= element.email %></td>
                        <td><%= element.phone %></td>
                        <td><%= element.location %></td>
                        <td><img style="width: 40px; height: 40px; object-fit: cover;" src="../assets/uploads/<%= element.photo %> " alt=""></td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/student/<%= element._id %> "><i class="fas fa-eye"></i></a>
                            <a class="btn btn-info btn-sm" href="/student/update/<%= element._id %> "><i class="fas fa-edit"></i></a>
                            <a class="btn btn-danger btn-sm" href="/student/delete/<%= element._id %>  "><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    
                   <% }) %>
                   </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
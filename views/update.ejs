<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="card update">
            <div class="card-header">
                <h2>Single data update</h2>
            </div>
            <div class="card-body">
                <form action="/student/update/<%=singleDataShow._id %> " method="post" enctype="multipart/form-data" >
                    <div class="my-3">
                        <input name="name" type="text" class="form-control" value="<%= singleDataShow.name %> ">
                    </div>
                    <div class="my-3">
                        <input name="email" type="text" class="form-control" value="<%=singleDataShow.email %> ">
                    </div>
                    <div class="my-3">
                        <input name="phone" type="text" class="form-control" value="<%= singleDataShow.phone %> ">
                    </div>
                    <div class="my-3">
                        <input name="location" type="text" class="form-control" value="<%= singleDataShow.location %> ">
                    </div>
                    <div class="my-3">
                        <input name="old_photo" type="text" class="form-control" value="<%= singleDataShow.photo %> ">
                        <img style="width: 200px; height: 200px; object-fit: cover;" src="/assets/uploads/<%= singleDataShow.photo %>" alt="">
                    </div>
                    <div class="my-3">
                        <input name="photo" type="file" class="form-control">
                    </div>
                    <div class="my-3">
                        <input type="submit" class="btn btn-primary">
                    </div>
                </form>
            </div>
          </div>
        </div>
    </div>
</div>


